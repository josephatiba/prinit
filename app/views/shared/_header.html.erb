
<header>
    <div id="nav-styles" class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">

            <button type="button" class="navbar-toggle" id="nav-toggle-button" data-toggle="collapse" data-target="#myNavbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            
            <%= link_to('PRINiT', root_path, class: "navbar-brand") %>

        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li><%= link_to('Home', root_path) %></li>
            <li><%= link_to('Discover', posts_path) %></li>
            <li><%= link_to("Create", new_post_path) %></li>
          </ul>
          
          <ul class="nav navbar-nav navbar-right">  
            <% if !logged_in? %>
              <li><%= link_to('Your Account', user_path(current_user)) %></li>
              <li class="cart-text"><%= render 'layouts/cart_text' %></li>
            
              <li><%= link_to('Logout', logout_path, :method => :delete) %></li> 
            <% else %>
              <li><%= link_to('Sign Up', new_user_path) %></li>
              <li><%= link_to('Log In', login_path) %></li>
          
            </li> 
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </div>
</header>