
  <div class="content-container center-block">
      <div>
   <%= form_for @post do |f| -%>

   <div>
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div>
      <%= f.label :public %>
      <%= f.check_box :public %>
    </div>

    <div>
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div>

    <div>
      <%= f.submit 'Share' %>
    </div>

     <% end %>
    </div>
 </div>