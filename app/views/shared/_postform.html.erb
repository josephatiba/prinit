
  <div class="content-container center-block">
      <div class="col-xs-6 col-xs-offset-3">
   <%= form_for @post do |f| -%>

   <div>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div>
      <%= f.label :public %>
      <%= f.check_box :public %>
    </div>

    <div>
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div>

    <div>
      <%= f.submit 'Share' %>
    </div>

     <% end %>
    </div>
 </div>