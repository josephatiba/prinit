
<div class="container">

  

<!-- Post Image -->
  <div class="row">
    
    <div class="canvas-div">


     <!-- wide angle pic -->
     <img class="center-block version {{main.getImgRotation}}" ng-show="main.display_two_to_three_l" src="<%= @post.image.url(:two_to_three) %>">
     
     <!-- center focus pic -->
     <img class="center-block version {{main.getImgRotation}}" ng-show="main.display_two_to_three" src="<%= @post.image.url(:two_to_three_l) %>">

     <!-- <div class="text-right">
          <button type="button" class="btn btn-default btn-lg size-button" ng-click="main.imgRotateLeft()">Rotate left</button>


          <button type="button" class="btn btn-default btn-lg size-button" ng-click="">Rotate Right</button>

      </div> -->

     <div class="row text-center">
<!-- post title -->
         <h2><%= @post.title %> by <%= link_to(@post.user.username, user_path(@post.user_id)) %></h2>

     </div>

        <div class="text-center">
             <% if current_user == @post.user %>
            <%= link_to('Edit Image', edit_post_path, class: "clear-btn btn btn-xs") %>
            <%= link_to "Delete", post_path(@post), class: "clear-btn btn btn-xs", method: :delete, data: { confirm: " are you sure you want to delete this image?" } %> 
            <% end %>
        </div>
   
    </div>

  

<br>

      <div class="row text-center canv-selection-div center-block">
        
        <!-- view Options button -->
      <button type="button" class="text-center canv-select-btn btn btn-lg">View <%= @printful.model_name %> Options</button>
        
          <h4 class="text-center">Choose a <%= @printful.model_name %> option</h4>

      <div class="text-center">
          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.show_two_to_three_l('<%= @post.image.url(:two_to_three_l) %>')">WIDE ANGLE</button>


          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.show_two_to_three('<%= @post.image.url(:two_to_three) %>')">MIDDLE CROP</button>

        </div>
        
      </div>

<!-- BR should be taken out when actually styling -->
      <br>

       <%= render "post_row", post: @post, order_item: @order_item %>
<!-- BR should be taken out when actually styling -->
            <!-- form -->
      
      <div class="row">
        <%= link_to 'Check Out', new_charge_path, class: 'btn btn-success pull-right' %>

      </div>

    

  </div>


  <div class="row">

    <p><%= @post.description %></p>

  </div>

 
</div>