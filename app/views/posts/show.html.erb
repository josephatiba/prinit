<!-- Post Image -->
<div class="container">

  <div class="row">

    <h1><%= @post.title %></h1>

  </div>


  <div class="row">
    
    <div class="canvas-div">

      <h2>{{main.test}}</h2>


     
     <img class="center-block version default" ng-hide="main.display_default" src="<%= @post.image.url(:post_pic) %>">
     <img class="center-block version 1" ng-hide="main.display_one_to_one" src="<%= @post.image.url(:one_to_one) %>">
     <img class="center-block version 2" ng-hide="main.display_three_to_four" src="<%= @post.image.url(:three_to_four) %>">
     <img class="center-block version 3" ng-hide="main.display_four_to_five" src="<%= @post.image.url(:four_to_five) %>">
     <img class="center-block version 4" ng-hide="main.display_two_to_three" src="<%= @post.image.url(:two_to_three) %>">

     <div>
       <p class="canvas-price" ng-hide="main.twelve_by_twelve_price">$<%= @printful.option_price[0] %></p>
       <p class="canvas-price" ng-hide="main.twelve_by_sixteen_price">$<%= @printful.option_price[1] %></p>
       <p class="canvas-price" ng-hide="main.sixteen_by_sixteen_price">$<%= @printful.option_price[2] %></p>
       <p class="canvas-price" ng-hide="main.sixteen_by_twenty_price">$<%= @printful.option_price[3] %></p>
       <p class="canvas-price" ng-hide="main.eighteen_by_twentyfour_price">$<%= @printful.option_price[4] %></p>
       <p class="canvas-price" ng-hide="main.twentyfour_by_thirtysix_price">$<%= @printful.option_price[5] %></p>
     </div>
      
   
    </div>

    <button type="button" class="btn btn-info btn-lg center-block">I want this!</button>



      <div class="row size-buttons-div center-block" ng-model="clicked">
        
          <h4><%= @printful.model_name %> Size options</h4>

          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.show_one_to_one(); main.show_twelve_by_twelve_price()"><%= @printful.option_size[0] %></button>


          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.show_three_to_four(); main.show_twelve_by_sixteen_price()"><%= @printful.option_size[1] %></button>


          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.show_one_to_one(); main.show_sixteen_by_sixteen_price()"><%= @printful.option_size[2] %></button>


          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.show_four_to_five(); main.show_sixteen_by_twenty_price()"><%= @printful.option_size[3] %></button>


          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.show_three_to_four(); main.show_eighteen_by_twentyfour_price()"><%= @printful.option_size[4] %></button>


          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.show_two_to_three(); main.show_twentyfour_by_thirtysix_price()"><%= @printful.option_size[5] %></button>



          

        
      </div>

    <% if current_user == @post.user %>
    <p><%= link_to('Edit Image', edit_post_path) %></p>
    <%= link_to "Delete", post_path(@post), class: "post-show-link", method: :delete, data: { confirm: " are you sure you want to delete this image?" } %> 

    <% end %>

  </div>


  <div class="row">

    <h3><%= @post.title %></h3>
    <p><%= @post.description %></p>


  </div>

  <div class="row">

    <h4><%= link_to('Discover + buy', posts_path) %></h4>
  </div>

</div>