
<div class="container indiv-post-container">

    <div class="content-container">

  <!-- Post Image -->
    <div class="row">
      
      <div class="canvas-div text-center">


       <!-- wide angle pic -->
       <img class="center-block version {{main.getImgRotation}}" ng-show="main.display_two_to_three_l" src="<%= @post.image.url(:two_to_three) %>">
       
       <!-- center focus pic -->
       <img class="center-block version {{main.getImgRotation}}" ng-show="main.display_two_to_three" src="<%= @post.image.url(:two_to_three_l) %>"> 

       <br>

        <!-- view Options button -->
        <button type="button" class="text-center canv-select-btn btn btn-lg" ng-hide="main.viewOptions" ng-click="main.viewOptionsClicked()">Click To View <%= @printful.model_name %> Options</button>

       <!-- <div class="text-right">
            <button type="button" class="btn btn-default btn-lg size-button" ng-click="main.imgRotateLeft()">Rotate left</button>


            <button type="button" class="btn btn-default btn-lg size-button" ng-click="">Rotate Right</button>

        </div> -->

       <div class="row text-center">
  <!-- post title -->
           <h2><%= @post.title %> by <%= link_to(@post.user.username, user_path(@post.user_id)) %></h2>

       </div>

          
     
      </div>

    

  <br>

        <div class="row text-center canv-selection-div center-block" ng-show="main.viewOptions">
          
         
          
            <h4 class="text-center" >Choose a <%= @printful.model_name %> option</h4>

        <div class="text-center">
            <button type="button" class="btn clear-btn btn-lg size-button" ng-click="main.viewPriceClicked();main.show_two_to_three_l('<%= @post.image.url(:two_to_three_l) %>')">WIDE ANGLE</button>


            <button type="button" class="btn clear-btn btn-lg size-button" ng-click="main.viewPriceClicked();main.show_two_to_three('<%= @post.image.url(:two_to_three) %>')">MIDDLE CROP</button>

        </div>


        <div ng-hide="main.viewPrice">
            <%= render "post_row", post: @post, order_item: @order_item %>

            <br>
            <%= link_to 'Check Out', new_charge_path, class: 'btn btn-success pull-right' %>
        </div>
        

          
        </div>

        <br>

      

    </div>


    <div class="row">

      <p><%= @post.description %></p>

    </div>

    <div class="text-center">
         <% if current_user == @post.user %>
        <%= link_to('Edit Post / Image', edit_post_path, class: "clear-btn btn btn-xs") %>
        <%= link_to "Delete", post_path(@post), class: "clear-btn btn btn-xs", method: :delete, data: { confirm: " are you sure you want to delete this image?" } %> 
        <% end %>
    </div>

  </div>

 
</div>
