<!-- Post Image -->
<div class="container">

  <div class="row">

    <h1><%= @post.title %></h1>

  </div>



  <div class="row">
    
    <div>
      <%= image_tag @post.image.url(:post_pic), class: "center-block" %>
    </div>

    <button type="button" class="btn btn-info btn-lg center-block"><%= link_to('I want this!', post_canvases_path(@post)) %></button>

    <% if current_user == @post.user %>
    <p><%= link_to('Edit Image', edit_post_path) %></p>
    <%= link_to "Delete", post_path(@post), class: "post-show-link", method: :delete, data: { confirm: " are you sure you want to delete this image?" } %> 

    <% end %>

  </div>


  <div class="row">

    <h3><%= @post.title %></h3>
    <p><%= @post.description %></p>


  </div>

  <div class="row">

    <h4><%= link_to('Discover + buy', posts_path) %></h4>
  </div>

</div>