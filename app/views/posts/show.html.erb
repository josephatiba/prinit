<!-- Post Image -->
<div class="container">

  <div class="row">

    <h1><%= @post.title %></h1>

  </div>


  <div class="row">
    
    <div>

      <h2>{{main.test}}</h2>


     
     <img class="center-block version default" ng-hide="main.display" src="<%= @post.image.url(:post_pic) %>">
     <img class="center-block version 1" ng-hide="true" src="<%= @post.image.url(:two_to_three) %>">
     <img class="center-block version 2" ng-hide="true" src="<%= @post.image.url(:three_to_four) %>">
     <img class="center-block version 3" ng-hide="true" src="<%= @post.image.url(:four_to_five) %>">
     <img class="center-block version 4" ng-hide="true" src="<%= @post.image.url(:one_to_one) %>">


  
   
    </div>

    <button type="button" class="btn btn-info btn-lg center-block">I want this!</button>

      <div class="row size-buttons-div center-block" ng-model="clicked">
        
          <h4><%= @printful.model_name %> Size options</h4>

          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.showImage1()"><%= @printful.option_size[0] %></button>
          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.showImage2()"><%= @printful.option_size[1] %></button>
          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.showImage3()"><%= @printful.option_size[2] %></button>
          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.showImage4()"><%= @printful.option_size[3] %></button>
          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.showImage5()"><%= @printful.option_size[4] %></button>
          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.showImage6()"><%= @printful.option_size[5] %></button>

          

        
      </div>

    <% if current_user == @post.user %>
    <p><%= link_to('Edit Image', edit_post_path) %></p>
    <%= link_to "Delete", post_path(@post), class: "post-show-link", method: :delete, data: { confirm: " are you sure you want to delete this image?" } %> 

    <% end %>

  </div>


  <div class="row">

    <h3><%= @post.title %></h3>
    <p><%= @post.description %></p>


  </div>

  <div class="row">

    <h4><%= link_to('Discover + buy', posts_path) %></h4>
  </div>

</div>