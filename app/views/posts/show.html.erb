
<div class="container">
<!-- post title -->
  <div class="row">

    <h1><%= @post.title %> by <%= @post.user.username %></h1>

  </div>

<!-- Post Image -->
  <div class="row">
    
    <div class="canvas-div">


     
     <img class="center-block version" ng-show="main.display_two_to_three_l" src="<%= @post.image.url(:two_to_three) %>">
     
     <img class="center-block version" ng-show="main.display_two_to_three" src="<%= @post.image.url(:two_to_three_l) %>">

   
    </div>

  



      <div class="row size-buttons-div center-block" ng-model="clicked">
        
          <h4><%= @printful.model_name %> Layouts</h4>


          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.show_two_to_three_l('<%= @post.image.url(:two_to_three_l) %>')">Landscape</button>


          <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.show_two_to_three('<%= @post.image.url(:two_to_three) %>')">Portrait</button>
        
      </div>

<!-- BR should be taken out when actually styling -->
      <br>

       <%= render "post_row", post: @post, order_item: @order_item %>
<!-- BR should be taken out when actually styling -->
            <!-- form -->
      
      <div class="row">
        <%= link_to 'Check Out', new_charge_path, class: 'btn btn-success' %>

      </div>

    <% if current_user == @post.user %>
    <p><%= link_to('Edit Image', edit_post_path) %></p>
    <%= link_to "Delete", post_path(@post), class: "post-show-link", method: :delete, data: { confirm: " are you sure you want to delete this image?" } %> 

    <% end %>

  </div>


  <div class="row">

    <p><%= @post.description %></p>

  </div>

 
</div>