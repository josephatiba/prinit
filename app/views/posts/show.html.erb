<!-- Post Image -->
<div class="container">

  <div class="row">

    <h1><%= @post.title %></h1>

  </div>


  <div class="row">
    
    <div>

      <h2>{{main.test}}</h2>


     
     <img class="center-block versions" ng-hide="true" src="<%= @post.image.url(:post_pic) %>">
     <img class="center-block versions" ng-hide="false" src="<%= @post.image.url(:two_to_three) %>">
     <img class="center-block versions" ng-hide="true" src="<%= @post.image.url(:three_to_four) %>">
     <img class="center-block versions" ng-hide="true" src="<%= @post.image.url(:four_to_five) %>">
     <img class="center-block versions" ng-hide="true" src="<%= @post.image.url(:one_to_one) %>">


  
   
    </div>

    <button type="button" class="btn btn-info btn-lg center-block">I want this!</button>

      <div class="row size-buttons-div center-block">
        
          <h4><%= @printful.model_name %> Size options</h4>

          <% @printful.option_size.each do |canv_size| %>
            <button type="button" class="btn btn-info btn-lg size-button" ng-click="main.showImage()"><%= canv_size %></button>
          <% end %>

        
      </div>

    <% if current_user == @post.user %>
    <p><%= link_to('Edit Image', edit_post_path) %></p>
    <%= link_to "Delete", post_path(@post), class: "post-show-link", method: :delete, data: { confirm: " are you sure you want to delete this image?" } %> 

    <% end %>

  </div>


  <div class="row">

    <h3><%= @post.title %></h3>
    <p><%= @post.description %></p>


  </div>

  <div class="row">

    <h4><%= link_to('Discover + buy', posts_path) %></h4>
  </div>

</div>